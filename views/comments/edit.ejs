<% include ../partials/header %>

<div class="container formstyle">
        <h1>Edit Comment</h1>
        <form action="/blogposts/<%= blogpost_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a class="btn btn-sm btn-outline-primary" href="/blogposts">Back</a>
    </div>
</div>

<% include ../partials/footer %>