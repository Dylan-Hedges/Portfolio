<% include ../partials/header %>

<div class="container formstyle">
        <h1>Add New Comment to <%= blogpost.name %></h1>
        <form action="/blogposts/<%= blogpost._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a class="btn btn-sm btn-outline-primary" href="/blogposts">Back</a>
    </div>
</div>

<% include ../partials/footer %>