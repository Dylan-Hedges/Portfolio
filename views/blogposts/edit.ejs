<!--BLOGPOST EDIT-->
<% include ../partials/header %>

<div class="container formstyle">
        <h1>Edit <%= blogpost.name %></h1>
        <form action="/blogposts/<%= blogpost._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="blogpost[name]" value="<%= blogpost.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="blogpost[image]" value="<%= blogpost.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="blogpost[description]" value="<%= blogpost.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a class="btn btn-sm btn-outline-primary" href="/blogposts/<%=blogpost._id%>" campground>Back</a>
    </div>

<% include ../partials/footer %>